    <insert id="UserSignUp">
       insert into user (username, password, stuId) values (#{username},#{password},#{stuId})
    </insert>

    <insert id="stuSignUp" parameterType="Integer">
       insert into student (id) values (#{id})
    </insert>

</mapper>